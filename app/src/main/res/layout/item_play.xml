<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/videoviewholder_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.cyberplayer.core.BVideoView
            android:id="@+id/video_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00ffffff">

        <ImageView
            android:id="@+id/image_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@mipmap/bg_user_default" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingTop="10dp"
            android:textSize="14dp"
            android:text="默认数据" />

        <TextView
            android:id="@+id/text_personnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingTop="30dp"
            android:textSize="12dp"
            android:text="默认数据" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/text_name"
            android:paddingLeft="10dp"
            android:src="@mipmap/btn_live_focus_normal" />

        <TextView
            android:id="@+id/text_paopaonumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="63dp"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:text="泡泡数:8888" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:layout_toRightOf="@+id/text_paopaonumber"
            android:src="@mipmap/ic_icon_p_arrow" />

        <ImageView
            android:id="@+id/image_more"
            android:paddingTop="10dp"
            android:paddingRight="60dp"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/btn_more" />

        <ImageView
            android:id="@+id/image_close"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_toLeftOf="@+id/image_more"
            android:layout_alignParentRight="true"
            android:src="@mipmap/btn_close_nor" />

        <ImageView
            android:paddingTop="40dp"
            android:paddingRight="10dp"
            android:layout_width="50dp"
            android:layout_height="165dp"
            android:layout_toLeftOf="@+id/image_more"
            android:layout_alignParentRight="true"
            android:src="@mipmap/rc_ic_star_hover" />

        <!--TextView
            android:id="@+id/text_xingxingnumber"
            android:paddingTop="65dp"
            android:paddingRight="60dp"
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:layout_alignParentRight="true"
            android:text="星星数" /-->
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom">

        <ListView
            android:id="@+id/listview_oneplayer"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:paddingBottom="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/image_talkplay"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:src="@mipmap/btn_talk_foot_nor" />

            <ImageView
                android:id="@+id/image_flowerplay"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/btn_flower_foot_nor" />

            <ImageView
                android:id="@+id/image_gift"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingRight="30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/btn_gift_foot_nor" />

            <ImageView
                android:id="@+id/image_shareplay"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:paddingRight="30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/btn_share_nor" />

            <ImageView
                android:id="@+id/image_messageplay"
                android:layout_width="450dp"
                android:layout_height="40dp"
                android:paddingRight="55dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/btn_chat_message_nor" />

        </RelativeLayout>
    </FrameLayout>
</FrameLayout>